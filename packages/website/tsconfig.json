{
  "compilerOptions": {
    "composite": true,
    "outDir": "./dist",
    "allowJs": true,
    "checkJs": true,
    "target": "esnext",
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "strict": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true,
    "noEmit": true,
    "jsx": "preserve",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false,
    "baseUrl": "./",
    "paths": {
      "ZeroComponents/*": [
        "modules/zero/components/*"
      ],
      "ZeroHooks/*": [
        "modules/zero/hooks/*"
      ],
      "web3.storage": [
        "../client"
      ]
    },
    "incremental": true
  },
  "include": [
    "assets/icons/*.js",
    "assets/illustrations/*.js",
    "lib",
    "pages",
    "pages/docs/*.json",
    "components",
    "content",
    "content/pages/*/*.json",
    "content/pages/*.json",
    "hooks",
    "modules",
    "store",
    "declaration.d.ts",
    "tests/**/*",
    "scripts",
    "playwright.config.ts"
  ],
  "references": [
    {
      "path": "../client"
    },
    {
      "path": "../w3up-launch"
    }
  ],
  "exclude": [
    "node_modules"
  ]
}
